@using MyTaskManagement.Core.Domain
@using MyTaskManagement.Models
@model MyTaskManagement.Models.ApplicationUser

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>ApplicationUser</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
    
        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>
         

        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JopTitle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JopTitle)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.HourlyRate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HourlyRate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.O_T_H_Rate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.O_T_H_Rate)
        </dd>
     
        <dt>
           <p>Projects</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Projects.Count)
        </dd>
        <dt>
           <p>Tasks</p>
        </dt>   

        <dd>
            @Html.DisplayFor(model => model.Tasks.Count)
        </dd>  
        <dt>
           <p>Done</p>
        </dt>

        <dd>  
            @{
                var numTaskDone = Model.Tasks.Where(task => task.Status == StatusEnum.Ended).ToList().Count;
                
                @Html.DisplayFor(modelItem =>  numTaskDone)
                
            }


        </dd>
        
        @if(Model.MyFiles.Any(f => f.MyFileType ==MyFileType.Photo))
        {
            <dt>
                Photo
            </dt>
            <dd>
                @{
                    var imgPath = @Model.MyFiles.FirstOrDefault(f => f.MyFileType == MyFileType.Photo).FileName;
                }
                <img src="~/images/@imgPath" alt=""/>
            </dd>
        }
     
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "ListUser")
</p>
