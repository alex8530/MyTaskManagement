@using System.Web.UI.WebControls
@using MyTaskManagement.Core.Domain
@using MyTaskManagement.Models
@model IEnumerable<MyTaskManagement.Models.TTask>
 
<table class="table table-responsive" id="listTask">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Creator)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Owner)
            </th>
            <th>
                <p>Project_Id</p>

            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstimatedTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EffortHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RemainingHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Priority)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeTask)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ticket)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReviewerName)
            </th>
            <th>
                <p>Assignee</p>
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Creator)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Owner)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Project.Id)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.StartTime)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EstimatedTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EffortHours)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RemainingHours)
                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.Priority)
                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TypeTask)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Ticket)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.ReviewerName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.ApplicationUser.FirstName)
                </td>
                <td>

                    @*@if (!item.TypeTask.Equals(TypeTaskEnum.Review))
                    {
                        @Html.ActionLink("Clone", "CloneToReviewer", "TTask", new { id = item.Id }, new { @class = "btn btn-info" })
                    }*@

                    
                    @if(item.IsApproveByManager.Equals(false))
                    {
                       @Html.ActionLink("Edit", "Edit", "TTask", new { id = item.Id }, new { @class = "btn btn-success" })
                        @Html.ActionLink("Delete", "Delete", "TTask", new { id = item.Id }, new { @class = "btn btn-danger" })

                        @Html.ActionLink("Approve", "Approve", "TTask", new { id = item.Id }, new { @class = "btn btn-dark" })

                    }
                    else
                    {
                        <input type="button" class="btn btn-dark"  value="Approved" disabled="disabled"/>
                     }
                </td>
               
            </tr>
        }
    </tbody>



</table>


 
@section scripts
{

    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.10.18/datatables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#listTask").dataTable();
        });
    </script>
}