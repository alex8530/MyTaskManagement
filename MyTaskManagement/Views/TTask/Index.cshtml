@using MyTaskManagement.Core.Domain
@model IEnumerable<MyTaskManagement.Models.TTask>

@{
    ViewBag.Title = "Tasks";
}

<h2>Tasks</h2>

<p>
    
    @Html.ActionLink("Create New", "Create", "TTask","", new { @class = "btn btn-success" })
</p>
<table class="table" id="listTask">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                <p>Project_Id</p>

            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeadTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.WorkingHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OverTime)
            </th>*@
             <th>
                @Html.DisplayNameFor(model => model.Priority)
            </th>
              <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                <p>Assignee</p>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>  @foreach (var item in Model)
             {
                 @Html.Partial("_AllTaskPartial",item)
             }
    </tbody>
   
     
</table>
@section scripts
{

    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.10.18/datatables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#listTask").dataTable();
        });
    </script>
}